<p id="notice"><%= notice %></p>

<h1>Listing Questions</h1>

<ul class="list-group">
  <% @questions.each do |question| %>
    
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="list-group">
          <a href="/questions/<%= question.id %>" class="list-group-item list-group-item-info">
            Question: <span class="list-group-item list-group-item-danger"><%= question.body %></span>
            Category: <span class="list-group-item list-group-item-info"><%= "question.category.category_name" %></span>
            Time Interval: <span class="list-group-item list-group-item-warning"><%= question.interval %></span>
            Default Answer: <span class="list-group-item list-group-item-warning"><%= question.default_answer %></span>
          </a>       
        </div>
      </div>
    </div>
  <% end %>

</ul>

<br>

<%= link_to 'New Question', new_question_path, class: "btn btn-raised btn-primary" %>



