<p id="notice"><%= notice %></p>

<h1>Listing Macroeconomic Variables</h1>

<ul class="list-group">
  <% @macroeconomic_variables.each do |macroeconomic_variable| %>
    
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="list-group list-group-item-info">
          <a href="/macroeconomic_variables/<%= macroeconomic_variable.id %>" class="list-group-item list-group-item-info">
            Country ID: <span class="list-group-item list-group-item-danger"><%= macroeconomic_variable.country_id %></span>
            Variable name: <span class="list-group-item list-group-item-info"><%= macroeconomic_variable.variable_name %></span>
            Field value: <span class="list-group-item list-group-item-warning"><%= customer_field_value.field_value %></span>
            Customer: <span class="list-group-item list-group-item-danger"><%= customer_field_value.customer_id %></span>
            Customer: <span class="list-group-item list-group-item-danger"><%= customer_field_value.customer_id %></span>
            Customer: <span class="list-group-item list-group-item-danger"><%= customer_field_value.customer_id %></span>
            Customer: <span class="list-group-item list-group-item-danger"><%= customer_field_value.customer_id %></span>

          </a>       
        </div>
      </div>
    </div>
  <% end %>

</ul>

<br>


<%= link_to 'New Customer field value', new_customer_field_value_path, class: "btn btn-raised btn-primary" %>






<table>
  <thead>
    <tr>
      <th>Country</th>
      <th>Variable name</th>
      <th>Variable type</th>
      <th>Variable value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @macroeconomic_variables.each do |macroeconomic_variable| %>
      <tr>
        <td><%= macroeconomic_variable.country_id %></td>
        <td><%= macroeconomic_variable.variable_name %></td>
        <td><%= macroeconomic_variable.variable_type %></td>
        <td><%= macroeconomic_variable.variable_value %></td>
        <td><%= link_to 'Show', macroeconomic_variable %></td>
        <td><%= link_to 'Edit', edit_macroeconomic_variable_path(macroeconomic_variable) %></td>
        <td><%= link_to 'Destroy', macroeconomic_variable, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

